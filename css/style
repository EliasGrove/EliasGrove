html {
     scroll-behavior: smooth; /* Good for anchor links */
 }
 body {
     font-family: 'Inter', sans-serif;
     scroll-snap-type: y mandatory;
     overflow-y: scroll;
     height: 100vh; /* Make body the scroll container */
 }
 section {
     scroll-snap-align: start;
     position: relative; /* Needed for potential absolute positioning inside */
     min-height: 100vh; /* Each section is full height */
     display: flex;
     align-items: center;
     padding: 0 1.5rem; /* Adjust padding as needed */
     color: white; /* Assuming white text, adjust per section if needed */

     /* --- Fade Effect --- */
     opacity: 0; /* Start sections as invisible */
     transition: opacity 0.8s ease-in-out; /* Smooth transition for opacity */
 }

 /* Add a class to make the section visible */
 section.is-visible {
     opacity: 1;
 }

 h1, h2, h3 {
     font-family: 'EB Garamond', serif;
 }

